<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>DOS.pl</title>
        <link rel="stylesheet" href="/styles/index.css" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link
            href="https://fonts.googleapis.com/css2?family=Cal+Sans&display=swap"
            rel="stylesheet">
        <link rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" />
    </head>
    <body>
        <!-- Nagłówek z nazwą sklepu i menu -->
        <header>
            <div class="header-container">
                <h1 class="logo">
                    <span class="material-symbols-outlined"
                        style="font-size: 58px;">health_metrics</span>
                    <span class="dos">DOS</span><span class="pl">.PL</span>
                </h1>
                <nav>
                    <a href="/cart" title="Koszyk">
                        <span class="material-symbols-outlined"
                            style="font-size: 38px;">shopping_cart</span>
                    </a>
                    <span class="material-symbols-outlined"
                        style="font-size: 38px;">person</span>
                    <span class="material-symbols-outlined"
                        style="font-size: 38px;">menu</span>
                </nav>
            </div>
        </header>

        <main>
            <!-- Sekcja produktów -->
            <section class="products">
                <% if (message) { %>
                <div class="message"><%= message %></div>
                <% } %>

                <ul class="product-list">
                    <% products.forEach(product => { %>
                    <li
                        class="product-card <%= product.quantity === 0 ? 'out-of-stock' : '' %>">
                        <a href="/product/<%= product.id %>">
                            <img src="<%= product.image %>"
                                alt="<%= product.name %>"
                                class="product-image" />
                        </a>
                        <div class="product-details">
                            <a href="/product/<%= product.id %>">
                                <h3><%= product.name %></h3>
                            </a>
                            <p><%= product.description %></p>
                            <p class="product-price"><strong><%=
                                    product.price.toFixed(2) %> zł</strong></p>

                            <form method="POST" action="/cart/add-to-cart"
                                class="add-to-cart-form">
                                <input type="hidden" name="id"
                                    value="<%= product.id %>" />

                                <label
                                    for="quantity-<%= product.id %>"></label>
                                <input
                                    type="number"
                                    id="quantity-<%= product.id %>"
                                    name="quantity"
                                    min="1"
                                    max="<%= product.quantity %>"
                                    value="1"
                                    required
                                    <%=product.quantity === 0 ? 'disabled' : ''
                                    %>
                                />

                                <button type="submit" class="add-to-cart-button"
                                    <%=product.quantity === 0 ? 'disabled' : ''
                                    %>>Add to Cart</button>
                            </form>
                        </div>
                    </li>
                    <% }); %>
                </ul>
            </section>
        </main>

        <footer>
            <p>Designed by</p>
            <p><b>Hanna Kerebińska</b></p>
        </footer>
    </body>
</html>

<script>
    // Zapisz scroll przed przeładowaniem
    window.addEventListener('beforeunload', () => {
        localStorage.setItem('scrollPosition', window.scrollY);
    });

    // Przywróć scroll po załadowaniu
    window.addEventListener('load', () => {
        const scrollY = localStorage.getItem('scrollPosition');
        if (scrollY !== null) {
            window.scrollTo(0, parseInt(scrollY));
            localStorage.removeItem('scrollPosition'); // opcjonalnie czyści
        }
    });
</script>
